/* Es una relacion entre varios documentos, en este caso a la hora de realizar consulta sobre el proyecto 
 * se junta con la informacion del estudiante.
 */

// BD name
const database = 'ImproTicDB';

// The current database to use.
use(database);

//execute in collection projects
db.users.aggregate([{
  $match: { role: 'student' }
}, {
  $lookup: {
    from: 'enrollments',
    as: 'projects',
    let: { user_id: '$_id' },
    pipeline: [{
      $match: {
        $expr: { 
          $eq: [ '$user_id', '$$user_id' ]
        }
      }
    }, {
      $lookup: {
        from: 'projects',
        localField: 'project_id',
        foreignField: '_id',
        as: 'user_project'
      }
    }, { 
      $unwind: '$user_project'
    }, {
      $addFields: {
        name: '$user_project.name',
        status: '$user_project.status'
      }
    }, {
      $project: {
        user_id: 0,
        project_id: 0,
        _id: 0,
        user_project: 0
      }
    }]
  }
}]);
